{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "public/assets/js",
    "public/assets/vendor/aos",
    "public/assets/vendor/bootstrap/js",
    "public/assets/vendor/glightbox/js",
    "public/assets/vendor/isotope-layout",
    "public/assets/vendor/php-email-form",
    "public/assets/vendor/swiper",
    "public/assets/vendor/waypoints"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}